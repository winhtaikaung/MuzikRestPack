<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_nano"
    android:layout_marginLeft="@dimen/spacing_minor"
    android:layout_marginRight="@dimen/spacing_minor"
    android:layout_marginTop="@dimen/spacing_nano"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivProfile"
            android:text="ArtistDetailItem" />

        <TextView
            android:id="@+id/tvArtistWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvArtistName"
            android:layout_alignStart="@+id/tvArtistName"
            android:layout_below="@+id/tvArtistName"
            android:layout_marginTop="@dimen/spacing_major"
            android:text="http://www.google.com" />

    </RelativeLayout>



</android.support.v7.widget.CardView>