<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_nano"
    android:layout_marginLeft="@dimen/spacing_minor"
    android:layout_marginRight="@dimen/spacing_minor"
    android:layout_marginTop="@dimen/spacing_nano"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_minor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_music" />

        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/ivItemIcon"
            android:layout_toRightOf="@+id/ivItemIcon"
            android:text="@string/app_name" />
    </RelativeLayout>

</android.support.v7.widget.CardView>